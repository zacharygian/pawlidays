
<h2>Pets in your area:</h2>

<div class="container">
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <div class="card-category"><%= pet.name %></div>
          <div class="card-user"><%= cl_image_tag pet.photo %>
          </div>
          <%= link_to "Details", pet_path(pet), class: "btn-medium"%>
        </div>
        <% if policy(pet).destroy? %>
        <% end %>
        </div>
      <% end %>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
></div>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js" %>
