<div class="login-form">
  <div class = "login-content">
<h1>Add a new pet</h1>
<%= simple_form_for @pet do |f| %>
  <%= f.input :name%>
  <%= f.input :animal_type %>
  <%= f.input :description %>

  <%= f.input :availability, as: :date, html5: true %>

  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add my pet" %>
<% end %>

  </div>
</div>
