<head>
<title>dashboard</title>
</head>

<body>
<h2>My Pets:</h2>
<ul>
  <% @pets.each do |pet| %>
    <li>
      <%= cl_image_tag pet.photo, height: 300, width: 400, crop: :fill %>
      <%= pet.name %>
      <%= link_to "Edit/Add Availability", edit_pet_path(pet) %>
      <%= link_to "Delete Pet", pet_path(pet), :method => :delete, data: {:confirm => "You sure?" }%>
    </li>
  <% end %>
</ul>

<%= link_to "Add another pet", new_pet_url %>
</body>

<div class="container contain">
  <div class="row all-cards">
    <h2>Hi<%= @user.name %>, here are your pets:</h2>
    <% @pets.each do |pet| %>
    <%= link_to pet_path(pet) do %>
      <div class="col-xs-12 col-sm-4">
        <div class="pet">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= cl_image_path pet.photo, crop: :fill %>')">
            <div class="card-category"><%= pet.name %></div>
          </div>
          <ul class="pet-details" style="list-style: none;">
            <li><%= link_to "Edit/Add Availability", edit_pet_path(pet) %></li>
            <li><%= link_to "Delete Pet", pet_path(pet), :method => :delete, data: {:confirm => "You sure?" }%></li>
          </ul>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<div><%= link_to "Add another pet", new_pet_url %></div>
