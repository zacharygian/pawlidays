<div class="background-login">
  <div class="login-form">
    <div class = "login-content">
      <div class="login-card">
        <div><h2>Log in</h2></div>
        <div><%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %></div>
        <div class="form-inputs">
          <div><%= f.input :email, required: false, autofocus: true %></div>
          <div><%= f.input :password, required: false %> <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"btn btn-primary" %>
        </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
